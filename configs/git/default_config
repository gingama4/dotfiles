[core]
  editor = nvim
  ignoreCase = false

[credential "https://github.com"]
	helper = 
	helper = !gh auth git-credential

[fetch]
  prune = true

[init]
  deffaultBranch = "main"

[pull]
  rebase = false

[commit]
  template = ~/.config/git/commit_template.txt
  gpgSign = true

[gpg]
  format = ssh

[user]
  signingkey = ~/.ssh/id_ed25519_github_sign.pub
