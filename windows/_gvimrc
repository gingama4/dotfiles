" カラースキーマ
colorscheme iceberg

set renderoptions=type:directx,renmode:5

" 文字サイズ
set guifont=Cica:h12 guifontwide=Cica:h12

" ウィンドウの透明化
set transparency=220

set guioptions-=m
set guioptions-=T
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L
set guioptions-=b
